# ==============================================
# TWITCH TOOLS WEB SUITE - ENVIRONMENT VARIABLES
# ==============================================

# ==================
# SERVER CONFIGURATION
# ==================
PORT=3000
NODE_ENV=development

# ==================
# DATABASE (PostgreSQL)
# ==================
DATABASE_URL="postgresql://username:password@localhost:5432/twitch_tools?schema=public"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=twitch_tools
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# ==================
# JWT AUTHENTICATION
# ==================
# Generate a secure random string for JWT_SECRET
# Example: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-change-this-in-production
JWT_EXPIRE=7d
REFRESH_TOKEN_EXPIRE=30d

# ==================
# ENCRYPTION
# ==================
# Used to encrypt sensitive data like Client Secrets and Access Tokens
# MUST be exactly 32 characters
# Example: openssl rand -base64 32
ENCRYPTION_KEY=your-32-char-encryption-key-here

# ==================
# CORS CONFIGURATION
# ==================
# Frontend URL (adjust for production)
CORS_ORIGIN=http://localhost:5173

# ==================
# RATE LIMITING
# ==================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================
# OPTIONAL: EMAIL CONFIGURATION
# ==================
# For password recovery (future feature)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@twitchtools.com

# ==================
# OPTIONAL: TWITCH API (for server-side operations)
# ==================
# TWITCH_CLIENT_ID=your_client_id_here
# TWITCH_CLIENT_SECRET=your_client_secret_here
# TWITCH_REDIRECT_URI=http://localhost:3000/auth/callback

# ==================
# DEVELOPMENT ONLY
# ==================
# Set to 'true' to enable detailed logging
DEBUG=false
